{
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.editor": "json",
    "window.title": "${remoteName}",
    "window.restoreWindows": "none",
    "window.closeWhenEmpty": true,
    "editor.minimap.enabled": false,
    "editor.rulers": [
        80
    ],
    "editor.formatOnSave": true,
    "editor.suggestSelection": "first",
    "editor.renderControlCharacters": false,
    "workbench.statusBar.visible": false,
    "workbench.activityBar.visible": false,
    "workbench.iconTheme": "file-icons-mac",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Mariana Pro (Cool)",
    "breadcrumbs.enabled": false,
    "extensions.ignoreRecommendations": true,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.macOptionIsMeta": true,
    "files.exclude": {
        ".ipynb_checkpoints": true
    },
    "search.exclude": {},
    "python.formatting.provider": "black",
    "python.linting.pylintArgs": [
        "--disable=R,C",
        "--extension-pkg-whitelist=cv2,torch"
    ],
    "python.pythonPath": "~/.pyenv/shims/python",
    "python.terminal.activateEnvironment": false,
    "[json]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "files.associations": {
        "**/dotfiles/*": "shellscript"
    },
    "[markdown]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "on",
    },
    "[plaintext]": {
        "editor.wordWrap": "on"
    },
    "explorer.autoReveal": false,
    "createtmpfile.deleteOnExit": true,
    "createtmpfile.tmpDir": "~/.cache/vscode-tempdir",
    "gitlens.currentLine.enabled": false,
    "gitlens.mode.active": "zen",
    "python.showStartPage": false,
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
    "java.configuration.checkProjectSettingsExclusions": false,
    "jupyter.jupyterServerType": "local",
    "jupyter.disableJupyterAutoStart": true,
    "jupyter.sendSelectionToInteractiveWindow": false,
    "jupyter.askForKernelRestart": false,
    "jupyter.alwaysTrustNotebooks": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.update.show": false,
    "latex-workshop.message.error.show": false,
    // "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.clean.fileTypes": [
        "__latexindent_temp.tex",
        "*.bcf",
        "*.fls",
        "*.run.xml",
        "*.synctex.gz",
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav"
    ],
    "python.workspaceSymbols.enabled": true,
    "python.workspaceSymbols.exclusionPatterns": [
        "**/site-packages/**",
        "**/.ipynb_checkpoints/**"
    ],
    "sonarlint.rules": {
        "java:S106": {
            "level": "off"
        },
        "java:S125": {
            "level": "off"
        },
        "java:S2975": {
            "level": "off"
        }
    },
    "window.zoomLevel": 2
}
