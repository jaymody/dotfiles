{
    ////////////////////////////////
    //////////// window ////////////
    ////////////////////////////////
    "window.title": "${remoteName}",
    "window.restoreWindows": "none",
    "window.closeWhenEmpty": true,
    "window.zoomLevel": 1,
    ////////////////////////////////
    //////////// editor ////////////
    ////////////////////////////////
    "editor.minimap.enabled": false,
    "editor.rulers": [
        80
    ],
    "editor.formatOnSave": true,
    "editor.suggestSelection": "first",
    "editor.renderControlCharacters": false,
    "editor.inlineSuggest.enabled": true,
    ////////////////////////////////
    /////////// workbench //////////
    ////////////////////////////////
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": false,
    "workbench.iconTheme": "file-icons-mac",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Mariana Pro (Cool)",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.colorCustomizations": {
        "[Mariana Pro (Cool)]": {
            "notebook.cellEditorBackground": "#23292e",
            "notebook.focusedCellBorder": "#999999"
        }
    },
    ////////////////////////////////
    /////////// terminal ///////////
    ////////////////////////////////
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    ////////////////////////////////
    /////////// general ////////////
    ////////////////////////////////
    "extensions.ignoreRecommendations": true,
    "breadcrumbs.enabled": false,
    "files.exclude": {
        ".ipynb_checkpoints": true
    },
    "search.exclude": {},
    "files.associations": {
        "**/dotfiles/*": "shellscript"
    },
    "explorer.autoReveal": false,
    ////////////////////////////////
    //// misc language specific ////
    ////////////////////////////////
    "[json]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.formatOnSave": false,
        "editor.wordWrap": "on"
    },
    "[plaintext]": {
        "editor.wordWrap": "on"
    },
    ////////////////////////////////
    /////////// gitlens ////////////
    ////////////////////////////////
    "gitlens.mode.active": "zen",
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    ////////////////////////////////
    ///////////// c++ //////////////
    ////////////////////////////////
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
    ////////////////////////////////
    ///////////// java /////////////
    ////////////////////////////////
    "java.configuration.checkProjectSettingsExclusions": false,
    ////////////////////////////////
    //////////// latex /////////////
    ////////////////////////////////
    "[latex]": {
        "editor.wordWrap": "on"
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.error.show": false,
    "latex-workshop.latex.clean.fileTypes": [
        "__latexindent_temp.tex",
        "*.bcf",
        "*.fls",
        "*.run.xml",
        "*.synctex.gz",
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav"
    ],
    ////////////////////////////////
    ///////// misc plugins /////////
    ////////////////////////////////
    "createtmpfile.deleteOnExit": true,
    "createtmpfile.tmpDir": "/tmp",
    "cSpell.enabled": true,
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },
    "github.copilot.enable": {
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false
    },
    ////////////////////////////////
    //////////// python ////////////
    ////////////////////////////////
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "autoDocstring.docstringFormat": "numpy",
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",
    "python.terminal.activateEnvironment": false,
    "python.pythonPath": "~/.pyenv/shims/python",
    "python.defaultInterpreterPath": "~/.pyenv/shims/python",
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.jupyterServerType": "local",
    "jupyter.disableJupyterAutoStart": true,
    "jupyter.sendSelectionToInteractiveWindow": false,
    "jupyter.askForKernelRestart": false,
    "notebook.cellFocusIndicator": "border",
    "notebook.showCellStatusBar": "visibleAfterExecute",
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.cellToolbarLocation": {
        "default": "hidden"
    },
    "notebook.lineNumbers": "on",
    "notebook.output.textLineLimit": 100
}
