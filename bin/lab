#!/bin/bash

# setup jlab for chromeapp http://christopherroach.com/articles/jupyterlab-desktop-app/
# setup firefox profile for app mode https://hummdis.com/projects/2019/firefox-app-mode/

if [ $# -eq 0 ]; then
    echo "Command requires 1 argument: name_of_screen"
    exit 1
fi

screen -dmS "$1" jupyter lab "${@:2}"
echo -e "running in screen $1:\njupyter lab ${@:2}"
