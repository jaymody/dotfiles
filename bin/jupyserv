#!/bin/bash

# first argument is port number, defaults to 9024 if not set
port=${1:-9024}

# second argument is ip address, defaults to inferred local ip if not set
localip="$(ip route get 8.8.8.8 | sed -n 's/.*src \([0-9.]\+\).*/\1/p')"
localip=${2:-$localip}

source "${HOME}/.shellrc"
jupyter lab --ip $localip --port $port --no-browser
